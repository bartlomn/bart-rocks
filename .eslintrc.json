{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "extends": [
        "plugin:react/recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "plugins": ["prefer-arrow"],
    "rules": {
        "react/prop-types": "off",
        "react/jsx-no-bind": "error",
        "prefer-const": "error",
        "no-var": "error",
        "prefer-arrow/prefer-arrow-functions": "error"
    }
}
